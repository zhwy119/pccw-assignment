<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.derek.email.mapper.EmailMapper">

    <!-- Result Map -->
    <resultMap id="BaseResultMap" type="com.derek.email.entity.Email">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="subject" jdbcType="VARCHAR" property="subject" />
        <result column="content" jdbcType="LONGVARCHAR" property="content" />
        <result column="recipient_address" jdbcType="VARCHAR" property="recipientAddress" />
        <result column="user_id" jdbcType="BIGINT" property="userId" />
        <result column="sent_status" jdbcType="INTEGER" property="sentStatus"/>
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
        <result column="update_date" jdbcType="TIMESTAMP" property="updateDate" />
        <result column="del_flag" jdbcType="VARCHAR" property="delFlag" />
    </resultMap>

    <!-- Select All -->
    <select id="selectAllEmails" resultMap="BaseResultMap">
        SELECT id, subject, content, recipient_address, user_id, create_date, update_date, sent_status, del_flag
        FROM email
        WHERE del_flag != '1'
    </select>








</mapper>
